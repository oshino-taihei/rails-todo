<div class="card">
  <div class="card-body">
    <%= form_with(model: [:admin, user], local: true) do |form| %>
      <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name, class: 'bmd-label-floating' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :email, class: 'bmd-label-floating' %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :admin, class: 'bmd-label-floating' %>
        <%= form.check_box :admin, :as => :boolean %>
      </div>

      <div class="field">
        <%= form.label :password, class: 'bmd-label-floating' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :password_confirmation, class: 'bmd-label-floating' %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit class: %w(btn btn-primary pull-right) %>
      </div>
    <% end %>
  </div>
</div>  
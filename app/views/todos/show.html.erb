<h1>Showing Todo</h1>
<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th>Title</th>
          <td><%= @todo.title %></td>
        </tr>
        <tr>
          <th>Body</th>
          <td><%= @todo.body %></td>
        </tr>
        <tr>
          <th>Status</th>
          <td><%= @todo.status %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Edit', edit_todo_path(@todo) %> |
<%= link_to 'Back', todos_path %>
